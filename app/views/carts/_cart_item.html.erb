<% if !@order_item.nil? && @order_item.errors.any? %>
  <ul>
  <% @order_item.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<% if @order_items.size > 0 %>
  <% @order_items.each do |item| %>
    <div class="pizzas">
      <div class="pizza_row">
        <div class="pizza_row_item">
          <div class="pizza_row_item_sub">
            <span><%= item.pizza.name %></span>
            <%= form_for(item, remote: true) do |f| %>
              <%= f.hidden_field :pizza_id, value: item.pizza.id %>
              <%= item.pizza.price %>
              <%= f.text_field :quantity, value: item.quantity.to_i, min: 1%>
              <%= f.submit "Обновить количество"%>
              <%= link_to 'Удалить', item, method: :delete, remote: true %>
              <span> Total Price: <%= item.total_price %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% else %>

<% end %>