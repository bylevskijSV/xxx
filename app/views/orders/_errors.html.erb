<% if @order.errors.any? %>

<div class="errors-div">
  <h2>Количество ошибок: <%= @order.errors.count %> </h2>
  <h4 class="alert-heading">Следующие ошибки не позволили сохранить заказ: </h4>
  <ul>
    <% @order.errors.each do |attribute, msg| %>
      <li style="list-style-type: circle"><%= msg %></li>
    <% end %>
  </ul>
</div>

<%end%>